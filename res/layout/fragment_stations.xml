<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <EditText
        android:id="@+id/editStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/section_label"
        android:layout_toLeftOf="@+id/buttonStationGo"
        android:layout_alignParentLeft="true"
        android:ems="10" />

    <Button
        android:id="@+id/buttonStationGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editStationName"
        android:layout_alignParentRight="true"
        android:text="@string/btn_go" 
        android:ems="4" />

    <ListView
        android:id="@+id/listStationResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editStationName"
        android:layout_below="@+id/buttonStationGo"
        android:layout_marginTop="23dp" >
    </ListView>
    
    <TextView
        android:id="@+id/textStationResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editStationName"
        android:layout_below="@+id/buttonStationGo"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/tip_no_history" >
    </TextView>

</RelativeLayout>
